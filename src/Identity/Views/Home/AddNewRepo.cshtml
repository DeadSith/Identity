@model AddNewRepoViewModel
@{
    ViewData["Title"] = "Add Repo";
}

<h2>@ViewData["Title"].</h2>

<form asp-action="AddNewRepo" method="post" class="form-horizontal">
    <h4>
        Add new Repository
    </h4>
    <hr />
    <div class="form-group">
        <label asp-for="RepoName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RepoName" class="form-control" />
            <span asp-validation-for="RepoName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IsPublic" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="IsPublic" class="" type="radio" value="true" checked="checked"/>Yes<br/>
            <input asp-for="IsPublic" class="" type="radio" value="false" />No<br/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}