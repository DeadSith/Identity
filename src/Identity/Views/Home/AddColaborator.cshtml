@model AddColaboratorViewModel

@{
    ViewData["Title"] = "Add Repo";
}

<h2>@ViewData["Title"].</h2>

<form asp-action="AddColaborator" method="post" class="form-horizontal">
  <h4>
    Add new Repository
  </h4>
  <hr />
  <div class="form-group">
    <label asp-for="RepositoryName" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="RepositoryName" class="form-control" />
      <span asp-validation-for="RepositoryName" class="text-danger"></span>
    </div>
    <label asp-for="ColaboratorName" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="ColaboratorName" class="form-control" />
      <span asp-validation-for="ColaboratorName" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <button type="submit" class="btn btn-default">Add colaborator</button>
    </div>
  </div>
</form>

@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}